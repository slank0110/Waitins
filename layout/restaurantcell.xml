<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/disc_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:scaleType="fitXY"
                android:id="@+id/disc_card_image"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <me.grantland.widget.AutofitTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Captain's Boil Seafood(666 Yonge St.)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:id="@+id/disc_card_view_res_name"
                android:layout_below="@+id/disc_card_image"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disc_card_view_small_table_inline_text"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/disc_card_view_small_table_inline_text"
                android:layout_below="@+id/disc_card_view_res_name"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBaseline="@+id/disc_card_view_direction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20sp"
                android:textColor="@color/colorDarkOrange"
                android:id="@+id/disc_card_view_inline_small_value"
                android:layout_toRightOf="@+id/disc_card_view_small_table_inline_text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignBaseline="@+id/disc_card_view_direction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disc_card_view_medium_table_inline_text"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/disc_card_view_med_table_inline_text"
                android:layout_toRightOf="@+id/disc_card_view_inline_small_value"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_alignBaseline="@+id/disc_card_view_direction" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/colorDarkOrange"
                android:id="@+id/disc_card_view_inline_medium_value"
                android:layout_toRightOf="@+id/disc_card_view_med_table_inline_text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignBaseline="@+id/disc_card_view_direction" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disc_card_view_large_table_inline_text"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/disc_card_view_large_table_inline_text"
                android:layout_toRightOf="@+id/disc_card_view_inline_medium_value"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_alignBaseline="@+id/disc_card_view_direction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/colorDarkOrange"
                android:id="@+id/disc_card_view_inline_large_value"
                android:layout_toRightOf="@+id/disc_card_view_large_table_inline_text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignBaseline="@+id/disc_card_view_direction" />

            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/disc_card_view_res_name"
                android:id="@+id/disc_card_view_inline_value"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in line"
                android:textSize="15sp"
                android:paddingBottom="3dp"
                android:layout_alignBottom="@+id/disc_card_view_inline_value"
                android:layout_toRightOf="@+id/disc_card_view_inline_value"
                android:id="@+id/disc_card_view_inline_text"
                />
                -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disc_card_view_direction"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/disc_card_view_direction"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/disc_card_direction"
                android:layout_toStartOf="@+id/disc_card_direction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2 km"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:id="@+id/disc_card_view_distance"
                android:layout_above="@+id/disc_card_view_direction"
                android:layout_toLeftOf="@+id/disc_card_direction"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/disc_card_direction"
                android:background="@drawable/gps"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/disc_card_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>