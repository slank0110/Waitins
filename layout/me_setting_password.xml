<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/me_setting_old_password"
        android:hint="@string/me_settings_change_password_old_hint"
        android:inputType="textPassword"
        android:singleLine="true"
        android:gravity="center"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/me_setting_new_password"
        android:hint="@string/me_settings_change_password_new_hint"
        android:singleLine="true"
        android:inputType="textPassword"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/me_setting_new_password_again"
        android:hint="@string/me_settings_change_password_new_hint_again"
        android:singleLine="true"
        android:inputType="textPassword"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/me_setting_confirm_button"
        android:text="@string/me_settings_change_password_save_button"
        android:textSize="25sp"
        android:background="@drawable/round_rect_corner"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

</LinearLayout>