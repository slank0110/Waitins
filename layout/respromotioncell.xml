<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <me.grantland.widget.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/colorBlack"
            android:id="@+id/res_promotion_cell_name"
            android:layout_weight="0.5"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_promotion_cell_price_type"
            android:text="@string/plate_promotion_money_sign"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.03"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/colorBlack"
            android:id="@+id/res_promotion_cell_price"
            android:layout_weight="0.3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/colorBlack"
            android:gravity="end"
            android:id="@+id/res_promotion_cell_left"
            android:layout_weight="0.2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_promotion_cell_left_text"
            android:text="@string/plate_promotion_left"
            android:textColor="@color/colorBlack"
            android:layout_weight="0.15"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
</LinearLayout>