<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_in_line"
    android:visibility="visible"
    tools:context="logicreat.waitins.InLineTab">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/inline_not_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/inline_layout">

        <me.grantland.widget.AutofitTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/inline_your_waiting_num"
            android:textSize="20sp"
            android:id="@+id/inline_your_waiting_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inline_your_waiting_num_value"
            android:textSize="30sp"
            android:id="@+id/inline_your_waiting_num_value"
            android:layout_below="@+id/inline_your_waiting_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/inline_separator1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/inline_your_waiting_num_value"
            android:src="@drawable/dotted"/>

        <!--
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:text="@string/inline_separator"
            android:id="@+id/inline_separator1"
            android:layout_below="@id/inline_your_waiting_num_value"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inline_people_in_line"
            android:text="People In Line:"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/inline_separator1"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="30sp"
            android:id="@+id/inline_people_in_line_value"
            android:layout_below="@+id/inline_people_in_line"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inline_before_you"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/inline_before_you"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/inline_people_in_line"
            android:layout_below="@id/inline_separator1"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inline_before_you_value"
            android:textSize="30sp"
            android:id="@+id/inline_before_you_value"
            android:layout_below="@+id/inline_before_you"
            android:layout_toRightOf="@+id/inline_people_in_line"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="65dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inline_before_you_format"
            android:text="@string/inline_before_you_format"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/inline_before_you_value"
            android:layout_toEndOf="@+id/inline_before_you_value"
            android:layout_toRightOf="@+id/inline_before_you_value"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/inline_separator3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/inline_before_you_value"
            android:src="@drawable/dotted"/>
        <!--
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:text="@string/inline_separator"
            android:id="@+id/inline_separator3"
            android:layout_below="@id/inline_before_you_value"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inline_estimated_wait_time"
            android:textSize="13sp"
            android:id="@+id/inline_estimated_wait_time"
            android:layout_below="@+id/inline_separator3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inline_how_long_waited"
            android:textSize="13sp"
            android:id="@+id/inline_how_long_waited"
            android:layout_below="@+id/inline_separator3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inline_estimated_wait_time_value"
            android:textSize="30sp"
            android:id="@+id/inline_estimated_wait_time_value"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/inline_estimated_wait_time"
            android:layout_alignLeft="@+id/inline_estimated_wait_time"
            android:layout_alignStart="@+id/inline_estimated_wait_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inline_how_long_waited_value"
            android:textSize="30sp"
            android:id="@+id/inline_how_long_waited_value"
            android:layout_alignTop="@+id/inline_estimated_wait_time_value"
            android:layout_alignLeft="@+id/inline_your_waiting_num_value"
            android:layout_marginLeft="50dp"
            />

        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inline_wait_time_format"
            android:textSize="15sp"
            android:id="@+id/inline_wait_time_format1"
            android:layout_alignBottom="@+id/inline_how_long_waited_value"
            android:layout_toEndOf="@+id/inline_how_long_waited_value"
            android:layout_toRightOf="@+id/inline_how_long_waited_value"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>
            -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inline_wait_time_format"
            android:textSize="15sp"
            android:id="@+id/inline_wait_time_format2"
            android:layout_alignBottom="@+id/inline_estimated_wait_time_value"
            android:layout_toEndOf="@+id/inline_estimated_wait_time_value"
            android:layout_toRightOf="@+id/inline_estimated_wait_time_value"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/inline_separator2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/inline_estimated_wait_time_value"
            android:src="@drawable/dotted"/>

        <TextView
            android:id="@+id/inline_accept_call_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inline_separator2"
            android:visibility="gone"
            android:text="@string/inline_accepted_call"/>

        <!--
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:text="@string/inline_separator"
            android:id="@+id/inline_separator2"
            android:layout_below="@id/inline_estimated_wait_time_value"/>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/inline_imageview"
            android:layout_below="@+id/inline_separator2"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/inline_map_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/gps"
            android:layout_toRightOf="@+id/inline_your_waiting_num_value"
            android:layout_alignBaseline="@+id/inline_your_waiting_num_value"
            android:layout_marginLeft="50dp"/>

    </RelativeLayout>

</RelativeLayout>
